@page
@model Nivora.IdentityManager.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "Manage Users";
}

<h2>Users</h2>

@if (Model.IsForbidden)
{
    <div class="alert alert-danger">Forbidden — admin access only.</div>
}
else
{
    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-info">@Model.StatusMessage</div>
    }

    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Email</th>
                <th>Roles</th>
                <th>Disabled</th>
                <th>Failed</th>
                <th>Lockout</th>
                <th>Email Confirmed</th>
                <th>Phone</th>
                <th>2FA</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>
                        @if (Model.UserRoles.TryGetValue(user.Id, out var roles) && roles.Count > 0)
                        {
                            <span class="badge bg-primary">@string.Join(", ", roles)</span>
                        }
                        else
                        {
                            <span class="text-muted">—</span>
                        }
                    </td>
                    <td>@user.IsDisabled</td>
                    <td>@user.AccessFailedCount</td>
                    <td>@user.LockoutEnd</td>
                    <td>@(user.EmailConfirmedAt?.ToString("g") ?? "—")</td>
                    <td>@(user.PhoneNumber ?? "—") @(user.PhoneConfirmedAt.HasValue ? "?" : "")</td>
                    <td>@(user.TwoFactorEnabled ? "?" : "—")</td>
                    <td>@user.CreatedAt.ToString("g")</td>
                    <td>
                        @if (user.IsDisabled)
                        {
                            <form method="post" asp-page-handler="Enable" style="display:inline">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn btn-sm btn-success">Enable</button>
                            </form>
                        }
                        else
                        {
                            <form method="post" asp-page-handler="Disable" style="display:inline">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn btn-sm btn-warning">Disable</button>
                            </form>
                        }
                        <form method="post" asp-page-handler="Revoke" style="display:inline">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Revoke</button>
                        </form>
                        <form method="post" asp-page-handler="SetPassword" style="display:inline" class="d-inline-flex align-items-center gap-1">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <input type="password" name="newPassword" class="form-control form-control-sm" style="width:120px" placeholder="new pwd" required />
                            <button type="submit" class="btn btn-sm btn-outline-primary">Set</button>
                        </form>
                        <form method="post" asp-page-handler="AssignRole" style="display:inline" class="d-inline-flex align-items-center gap-1">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <input type="text" name="roleName" class="form-control form-control-sm" style="width:100px" placeholder="role" required />
                            <button type="submit" class="btn btn-sm btn-outline-success">+Role</button>
                        </form>
                        <form method="post" asp-page-handler="RemoveRole" style="display:inline" class="d-inline-flex align-items-center gap-1">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <input type="text" name="roleName" class="form-control form-control-sm" style="width:100px" placeholder="role" required />
                            <button type="submit" class="btn btn-sm btn-outline-danger">-Role</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
